
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
@if (ViewBag.Err != null)
{
    <script type="text/javascript" charset="utf-8">
        window.onload = function () {
        alert(decodeURIComponent("@ViewBag.Err"));
    }
    </script>
}

<div class="breadcrumb">
    <div class="container">
        <a class="breadcrumb-item" href="~/Home/Index">Trang chủ</a>
        <span class="breadcrumb-item active">Đăng ký</span>
    </div>
</div>
<section class="static about-sec">
    <div class="container">
        <h1>Tài khoản của tôi / Đăng ký</h1>
        <p> </p>
        <div class="form">
            <form action="~/DangKy/Index" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-4">
                        <input type="email" placeholder="Nhập email" name="email" required>
                        <span class="required-star">*</span>
                    </div>
                    <div class="col-md-4">
                        <input type="password" placeholder="Nhập mật khẩu" name="password" required>
                        <span class="required-star">*</span>
                    </div>
                    <div class="col-md-4">
                        <input type="password" placeholder="Nhập lại mật khẩu" name="repassword" required>
                        <span class="required-star">*</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <input type="text" placeholder="Nhập Họ" name="ho" required>
                        <span class="required-star">*</span>
                    </div>
                    <div class="col-md-3">
                        <input type="text" placeholder="Nhập Tên" name="ten" required>
                        <span class="required-star">*</span>
                    </div>
                    <div class="col-md-3">
                        <input type="date" name="ngaysinh" placeholder="Repeat Password" required>
                        <span class="required-star">*</span>
                    </div>
                    <div class="col-md-3">
                        <select name="gioitinh">
                            <option value="0" selected>Nam</option>
                            <option value="1">Nữ</option>
                        </select>
                    </div>
                    <div class="col-lg-8 col-md-12">
                        <button type="submit" class="btn black">Đăng ký</button>
                        <h5>Đã có tài khoản ? <a href="~/DangNhap/Index">Đăng nhập tại đây</a></h5>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

