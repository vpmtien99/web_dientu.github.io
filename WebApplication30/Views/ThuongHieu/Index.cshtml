
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

@if (ViewBag.Err != null)
{
    <script type="text/javascript" charset="utf-8">
        window.onload = function () {
        alert("@ViewBag.Err");
    }
    </script>
}
<div class="breadcrumb">
    <div class="container">
        <a class="breadcrumb-item" href="index.html">Home</a>
        <span class="breadcrumb-item active">Thương Hiệu</span>
    </div>
</div>
<section class="recomended-sec">
    <div class="container">
        <div class="title">
            <h2>Thương Hiệu</h2>
            <hr>
        </div>
        <div class="row">
            @{ 
                var list = Session["Brands"] as List<WebApplication30.Models.NSX>;
            }
            @foreach (var item in list)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="item">
                        <img style="width: 225px;height: 250px;display: block;margin-left: auto; margin-right: auto;" src="~/UploadedFiles/@item.Anh" alt="img">
                        <h3>@item.TenNSX</h3>
                        <div class="hover">
                            <a href="/ThuongHieu/MoHinh/@item.MaNSX">
                                <span><i class="fa fa-long-arrow-right" aria-hidden="true"></i></span>
                            </a>
                        </div>
                    </div>
                </div>
            }
            
                
            

        </div>
    </div>

</section>